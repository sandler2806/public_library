<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clean"
    tools:context=".AddBookLibrarian">

    <TextView
        android:id="@+id/AddBookHeaderText"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="Please enter book details"
        android:fontFamily="@font/kaushan"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/BookNameInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddBookHeaderText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.7"
        android:background="#ffffff"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:hint="Book name"
        android:inputType="number"
        android:padding="20dp"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="159dp" />

    <EditText
        android:id="@+id/BookAuthorInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BookNameInsert"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:hint="Author"
        android:alpha="0.7"
        android:background="#ffffff"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="355dp" />

    <EditText
        android:id="@+id/BookGenreInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BookAuthorInsert"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:hint="Genre"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:padding="20dp"
        android:textColor="@color/black"
        android:alpha="0.7"
        android:background="#ffffff"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="355dp" />

    <EditText
        android:id="@+id/BookAmountsInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BookGenreInsert"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:hint="Amount"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:padding="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:textSize="20dp"
        android:alpha="0.7"
        android:background="#ffffff"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="355dp" />
    <EditText
        android:id="@+id/BookYearPublishedInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BookAmountsInsert"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:hint="Publishing Year"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:padding="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="3dp"
        android:alpha="0.7"
        android:background="#ffffff"
        tools:layout_editor_absoluteY="355dp" />
    <Button
        android:id="@+id/AddBookButton"
        android:layout_width="157dp"
        android:layout_height="78dp"
        android:layout_below="@id/BookYearPublishedInsert"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="addBook"
        android:backgroundTint="#72a6b4"
        android:alpha="0.9"
        android:text="add book"
        android:shape="oval"
        android:width="100dp"
        android:height="100dp"/>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#008485"
        android:onClick="goBack"
        android:alpha="0.7"
        app:srcCompat="@android:drawable/ic_menu_revert" />
</RelativeLayout>